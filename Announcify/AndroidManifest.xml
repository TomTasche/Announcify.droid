            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.announcify.ui.control.RemoteControlDialogInstaller"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
