package com.announcify.engine.channel;

import javax.persistence.Id;

import org.scribe.model.Token;

import com.announcify.engine.model.Credential;
import com.announcify.engine.storage.Objectable;
import com.announcify.engine.storage.Objectifier;
import com.google.appengine.api.users.User;

public class UserChannel extends Objectable {

    @Id int id;
    String token;
    String userId;
    
    
    public static UserChannel getChannelForUser(User user) {
        return Objectifier.getObjectify().query(UserChannel.class).filter("token", token).get();
    }
}
