package com.announcify.engine.speech;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.Writer;
import java.net.HttpURLConnection;
import java.net.URL;
import java.net.URLEncoder;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.announcify.engine.Servlet;

@SuppressWarnings("serial")
public class SpeechServlet extends Servlet {
    
    private static final String ADDRESS = "http://translate.google.com/translate_tts?tl=en&q=";

    
    @Override
    protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        String text = request.getParameter("text");
        if (text == null) return;
        
        HttpURLConnection connection = null;

        InputStreamReader reader = null;
        BufferedReader buffReader = null;
        try {
            final URL url = new URL(ADDRESS + URLEncoder.encode(text, "UTF-8"));
            connection = (HttpURLConnection) url.openConnection();
            connection.setRequestMethod("GET");
            connection.setReadTimeout(3000);
            connection.connect();

            reader = new InputStreamReader(connection.getInputStream());
            buffReader = new BufferedReader(reader);
            
            response.setContentType("audio/mp3");
            
            Writer writer = response.getWriter();
            for (String s = buffReader.readLine(); s != null; s = buffReader.readLine()) {
                writer.write(s);
            }
        } finally {
            if (buffReader != null) {
                buffReader.close();
            }

            if (reader != null) reader.close();

            if (connection != null) {
                connection.disconnect();
            }
        }
    }
}
