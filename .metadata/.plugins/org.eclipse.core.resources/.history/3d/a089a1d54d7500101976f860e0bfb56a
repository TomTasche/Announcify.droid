<!DOCTYPE HTML>
<html>
	<head>
		<script src="jquery-1.5.2.js"></script>
		<script src="jquery.jplayer.min.js"></script>
		
		<script>
			function getURLParam(strParamName) {
				var strReturn = "";
				var strHref = window.location.href;
				
				if (strHref.indexOf("?") > -1) {
					var strQueryString = strHref.substr(strHref.indexOf("?")).toLowerCase();
					
					var aQueryString = strQueryString.split("&");
					
					for (var iParam = 0; iParam < aQueryString.length; iParam++) {
						if (aQueryString[iParam].indexOf(strParamName + "=") > -1) {
							var aParam = aQueryString[iParam].split("=");
							
							strReturn = aParam[1];
							
							break;
						}
					}
				}
				
				return strReturn;
			}
			
			function announcify(text) {
				var voice = document.createElement("audio");
				voice.setAttribute("controls", "controls");
				voice.setAttribute("src", text);
				voice.setAttribute("autoplay", "autoplay");
				document.getElementById("speech").appendChild(voice);
			}
		</script>
	</head>
	
	<body onload="announcify('http://translate.google.com/translate_tts?tl=en&q=new%20mail%20from%20tom')">
		<div id="speech"></div>
	</body>
</html>
