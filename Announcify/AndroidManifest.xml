<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mailboxer.saymyname"
    android:versionCode="140"
    android:versionName="1.0.4.0" >

    <application
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Announcify" >
        <receiver android:name="com.announcify.ui.ToggleWidget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.announcify.WIDGET_ACTION" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider" />
        </receiver>
        <receiver android:name="com.announcify.background.receiver.ControlReceiver" />

        <activity android:name="com.mobfox.sdk.InAppWebView" />
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation" />
        <activity
            android:name="com.announcify.ui.activity.AnnouncifyActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.announcify" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.announcify.ui.activity.SettingsActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.announcify.SETTINGS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.announcify.ui.activity.GroupActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/preference_choose_group_title" />
        <activity
            android:name="com.announcify.ui.activity.ContactActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/preference_contact_title" />
        <activity
            android:name="com.announcify.ui.activity.ReplaceActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" />
        <activity
            android:name="com.announcify.ui.control.RemoteControlDialog"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
