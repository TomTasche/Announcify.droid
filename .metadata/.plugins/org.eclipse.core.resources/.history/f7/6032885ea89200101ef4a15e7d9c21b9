function isTokenAvailable() {
	var token = localStorage.getItem(type + '.token');
	if (token == null || token == "") {
		return false;
	} else {
		return true;
	}
}
			
function getToken(type) {
	return localStorage.getItem(type + '.token');
}
			
function appendToken(url) {
	var token = JSON.parse(getToken());
			
	return "?token=" + encodeURIComponent(token.token) + "&secret=" + encodeURIComponent(token.secret);
}
			
function saveToken(credential) {
	localStorage.setItem(credential.service, credential.token);
}