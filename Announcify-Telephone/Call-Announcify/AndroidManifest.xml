<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.announcify.plugin.voice.call"
	android:versionCode="2"
	android:versionName="0.2">

	<uses-permission
		android:name="com.announcify.PERMISSION_IM_A_PLUGIN" />
	<uses-permission
		android:name="android.permission.READ_CONTACTS" />
	<uses-permission
		android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission
		android:name="android.permission.WRITE_SETTINGS" />

	<uses-feature
		android:required="true"
		android:name="android.hardware.telephony" />

	<application
		android:icon="@drawable/icon"
		android:label="@string/app_name" android:debuggable="true">

		<activity
			android:name=".activity.SettingsActivity"
			android:label="@string/app_name">

			<intent-filter>
				<action
					android:name="com.announcify.plugin.voice.call.SETTINGS" />
				<category
					android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<receiver
			android:name=".receiver.CallReceiver"
			android:label="@string/app_name">

			<intent-filter>
				<action
					android:name="android.intent.action.PHONE_STATE" />
			</intent-filter>
		</receiver>

		<receiver
			android:name=".receiver.AnnouncifyReceiver"
			android:label="@string/app_name">

			<intent-filter>
				<action
					android:name="com.announcify.ACTION_PLUGIN_CONTACT" />
			</intent-filter>
		</receiver>

		<receiver
			android:name=".receiver.RingtoneReceiver"
			android:label="@string/app_name">

			<intent-filter>
				<action
					android:name="com.announcify.plugin.voice.call.ACTION_START_RINGTONE" />
			</intent-filter>

			<intent-filter>
				<action
					android:name="com.announcify.plugin.voice.call.ACTION_STOP_RINGTONE" />
			</intent-filter>
		</receiver>

		<service
			android:name=".service.WorkerService" />
	</application>

	<supports-screens
		android:normalScreens="true"
		android:smallScreens="true"
		android:resizeable="true"
		android:largeScreens="true"
		android:xlargeScreens="true"
		android:anyDensity="true" />

	<uses-sdk
		android:minSdkVersion="7"
		android:targetSdkVersion="17" />
</manifest>