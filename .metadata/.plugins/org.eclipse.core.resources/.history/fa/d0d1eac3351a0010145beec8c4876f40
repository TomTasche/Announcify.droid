package com.announcify.activity.widget;

import greendroid.widget.item.Item;
import greendroid.widget.itemview.ItemView;
import android.content.Context;
import android.content.Intent;
import android.util.AttributeSet;
import android.view.View;
import android.widget.ImageView;
import android.widget.LinearLayout;
import android.widget.TextView;

import com.announcify.R;

public class AnnouncificationItemView extends LinearLayout implements ItemView {
	private final Context context;

	private ImageView icon;
	private TextView settings;

	public AnnouncificationItemView(final Context context) {
		this(context, null);
	}

	public AnnouncificationItemView(final Context context, final AttributeSet attrs) {
		super(context, attrs);

		this.context = context;
	}

	public void prepareItemView() {
		icon = (ImageView) findViewById(R.id.icon);
		settings = (TextView) findViewById(R.id.settings);
	}

	public void setObject(final Item object) {
		final AnnouncificationItem item = (AnnouncificationItem) object;

		if (item.drawableId != 0) {
			icon.setImageDrawable(getResources().getDrawable(item.drawableId));
		}

		settings.setText(item.text);
	}
}