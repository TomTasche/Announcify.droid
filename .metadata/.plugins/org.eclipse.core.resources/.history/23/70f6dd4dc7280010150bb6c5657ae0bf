        return "announcify";
    }

    @Override
    public Uri insert(Uri uri, ContentValues values) {
        SQLiteDatabase database = announcify.getWritableDatabase();
        database.insert(uri.getLastPathSegment(), null, values);
        database.close();
        
        return null;
    }

