package com.announcify.util;

import android.content.SharedPreferences;

public interface PluginSettings {
	public static final String PREFERENCES_NAME = "com.announcify.plugin.call.SETTINGS";

	final SharedPreferences preferences;

	static final String KEY_READING_BREAK = "preference_reading_break";
	static final String KEY_READING_REPEAT = "preference_reading_repeat";
	static final String KEY_READING_WAIT = "preference_reading_wait";

	static final String KEY_READING_UNKNOWN = "preference_reading_unknown";
	protected static final String KEY_READING_DISCREET = "preference_reading_discreet";
	protected static final String KEY_READING_ANNOUNCEMENT = "preference_reading_announcement";
	
	public abstract String getSharedPreferencesName();
	
	public abstract int getReadingBreak();

	public abstract int getReadingRepeat();

	public abstract int getReadingWait();

	public abstract int getUnknownMode();

	public abstract int getAnnouncementMode();
	
	public abstract int getDiscreetMode();
	
	public abstract String getCustomAnnouncement();
	
	public abstract String getEventType();
}
