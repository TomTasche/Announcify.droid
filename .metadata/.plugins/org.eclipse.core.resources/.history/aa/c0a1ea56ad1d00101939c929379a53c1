package com.announcify.api.contact.lookup;

import android.database.Cursor;
import android.net.Uri;
import android.provider.ContactsContract.PhoneLookup;

import com.announcify.api.contact.Contact;

public class Phone {
    public static void getId(Contact contact) {
        Cursor cursor = null;

        try {
            cursor = contact
                    .getContext()
                    .getContentResolver()
                    .query(Uri.withAppendedPath(PhoneLookup.CONTENT_FILTER_URI,
                            Uri.encode(contact.getAddress())),
                            new String[] {
                                    PhoneLookup._ID, PhoneLookup.LOOKUP_KEY
                            }, null, null, null);
        } finally {
            if (cursor != null) {
            cursor.close();
            }
        }
    }
    
    public static void getNumber(Contact contact) {
        contact.getId();
    }
    
    public static void getType(Contact contact) {
        contact.getId();
    }
    
    public static void getLabel(Contact contact) {
        contact.getId();
    }
}