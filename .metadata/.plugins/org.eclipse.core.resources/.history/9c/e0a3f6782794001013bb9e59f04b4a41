package com.announcify.engine.appengine;

import org.scribe.model.Token;

import com.announcify.engine.model.Credential;
import com.announcify.engine.storage.Objectifier;

public class AppEngineCredential extends Credential {

    public static AppEngineCredential getCredentialForIdentity(String userId) {
        return (AppEngineCredential) Credential.getCredentialForIdentity(AppEngineCredential.class, userId);
    }
    
    public static AppEngineCredential getCredentialForToken(Token token) {
        return Objectifier.getObjectify().query(AppEngineCredential.class).filter("token", token).get();
    }
    
    
    public AppEngineCredential() {
        // TODO Auto-generated constructor stub
    }
    
    public AppEngineCredential(Token token, String userId) {
        super(token, userId);
    }
    

    @Override
    public void objectify() {
        Objectifier.getObjectify().put(this);
    }
    
    
    
}
