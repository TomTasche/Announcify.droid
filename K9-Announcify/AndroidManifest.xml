<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.announcify.plugin.mail.k9"
	android:versionCode="8"
	android:versionName="0.7.1">

	<permission
		android:name="com.announcify.PERMISSION_IM_A_PLUGIN"
		android:protectionLevel="normal" />

	<uses-permission
		android:name="com.announcify.PERMISSION_IM_A_PLUGIN" />
	<uses-permission
		android:name="android.permission.READ_CONTACTS" />
	<uses-permission
		android:name="android.permission.WRITE_SETTINGS" />
	<uses-permission
		android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission
		android:name="com.fsck.k9.permission.READ_MESSAGES" />

	<uses-feature
		android:name="android.hardware.touchscreen"
		android:required="false" />

	<application
		android:icon="@drawable/icon"
		android:label="@string/app_name">

		<activity
			android:name=".activity.SettingsActivity"
			android:label="@string/app_name">

			<intent-filter>
				<action
					android:name="com.announcify.plugin.mail.k9.SETTINGS" />
				<category
					android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<receiver
			android:name=".receiver.BootReceiver"
			android:label="@string/app_name">

			<intent-filter>
				<action
					android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>

		<receiver
			android:name=".receiver.AnnouncifyReceiver"
			android:label="@string/app_name">

			<intent-filter>
				<action
					android:name="com.announcify.ACTION_PLUGIN_CONTACT" />
			</intent-filter>
		</receiver>

		<receiver
			android:name=".receiver.RingtoneReceiver"
			android:label="@string/app_name">

			<intent-filter>
				<action
					android:name="com.announcify.plugin.mail.k9.ACTION_START_RINGTONE" />
			</intent-filter>

			<intent-filter>
				<action
					android:name="com.announcify.plugin.mail.k9.ACTION_STOP_RINGTONE" />
			</intent-filter>
		</receiver>

		<service
			android:name=".service.WorkerService" />

		<service
			android:name=".service.MailService" />
	</application>

	<supports-screens
		android:normalScreens="true"
		android:smallScreens="true"
		android:resizeable="true"
		android:largeScreens="true"
		android:xlargeScreens="true"
		android:anyDensity="true" />

	<uses-sdk
		android:minSdkVersion="7"
		android:targetSdkVersion="9" />
</manifest>