package com.announcify.text;

import java.util.Map;

public class Formatter {
	public static final String ADDRESS = "$0";
	public static final String NAME = "$1";
	public static final String ADDRESS_TYPE = "$2";
	public static final String MESSAGE = "$3";
	
	public static String replaceExpressions(Map<String, String> expressions, String text) {
		for (String s : expressions.keySet()) {
			text = text.replace(s, expressions.get(s));
		}

		return text;
	}
}