package com.announcify.engine.channel;

import java.io.IOException;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.announcify.engine.servlet.AuthenticatedServlet;
import com.google.appengine.api.channel.ChannelMessage;
import com.google.appengine.api.channel.ChannelService;
import com.google.appengine.api.channel.ChannelServiceFactory;
import com.google.appengine.api.users.User;

@SuppressWarnings("serial")
public class ChannelServlet extends AuthenticatedServlet {

    // TODO: we know who's the most probably to be heard client just by looking up the user's latest channelId. why? the client updates it every X seconds with a hello-POST 

    @Override
    protected int doSomething(HttpServletRequest request, HttpServletResponse response, User user) throws IOException {        
        ChannelService service = ChannelServiceFactory.getChannelService();

        UserChannel channel = new UserChannel(user);
        channel.objectify();

        service.createChannel(channel.getToken());
        service.sendMessage(new ChannelMessage(channel.getToken(), "welcome, dude"));

        response.setContentType("text/plain");
        response.getWriter().write(channel.getToken());

        return 0;
    }
}
