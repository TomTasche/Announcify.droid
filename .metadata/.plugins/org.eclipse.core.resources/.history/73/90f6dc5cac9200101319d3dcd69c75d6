var BASE_URL = "https://0.announcify.appspot.com/";

$(document).ready(function() {
	var token = document.getElementById("json");
	if (token.innerText == null || token.innerText == "") return;
	
	var credential;
	if (document.location.indexOf("https://announcify.appspot.com/gmail") > 0) {
		credential = {service: "gmail.token", token: "token.innerText"};
	} else if (document.location.indexOf("https://announcify.appspot.com/appengine") > 0) {
		credential = {service: "appengine.token", token: "token.innerText"};
	}
	
	alert(credential);
	
	chrome.extension.sendRequest(credential);
});