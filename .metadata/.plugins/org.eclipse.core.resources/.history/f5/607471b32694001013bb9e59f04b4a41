package com.announcify.engine.channel;

import java.util.Random;

import javax.persistence.Id;

import com.announcify.engine.storage.Objectable;
import com.announcify.engine.storage.Objectifier;
import com.google.appengine.api.users.User;

public class UserChannel extends Objectable {

    public static UserChannel getChannelForUser(User user) {
        return Objectifier.getObjectify().query(UserChannel.class).filter("userId", user.getUserId()).get();
    }
    
    
    @Id int id;
    String token;
    String userId;

    
    public UserChannel() {
        // TODO Auto-generated constructor stub
    }
    
    public UserChannel(User user) {
        this.userId = user.getUserId();
        this.token = generateToken();
    }
    
    public UserChannel(String token, User user) {
        this.token = token;
        this.userId = user.getUserId();
    }
    
    
    private String generateToken() {
        return new Random().nextFloat() * 8 + userId;
    }
    
    @Override
    public void objectify() {
        Objectifier.getObjectify().put(this);
    }
    
    
    public String getToken() {
        return token;
    }
}
